---
import Button from "../components/Button.astro";
import useLang from "../utils/useLang";
import ButtonIcon from "./ButtonIcon.astro";
import Github from "../assets/github.svg";
import Linkedin from "../assets/linkedin.svg";
import sources from "../utils/sources";
const { t } = useLang(Astro.url);
---

<div class="w-full h-24 bg-black flex items-center">
  <div
    class="max-w-7xl w-full mx-auto px-6 md:px-12 lg:px-16 xl:px-0 flex justify-between items-center"
  >
    <div class="flex gap-5 items-center">
      <div class="font-bold text-lg uppercase text-white">
        {t("header.name")}
      </div>
      <div class="flex items-center gap-3">
        <ButtonIcon variant="white" href={sources.github}>
          <Github />
        </ButtonIcon>
        <ButtonIcon variant="white" href={sources.linkedin}>
          <Linkedin />
        </ButtonIcon>
      </div>
    </div>

    <div class="flex items-center gap-3">
      <span class="text-white text-sm font-light font-secondary">
        {t("footer.copyright")}
      </span>
    </div>

    <Button variant="white" size="sm">
      {t("footer.ctaContact")}
    </Button>
  </div>
</div>

<style></style>
