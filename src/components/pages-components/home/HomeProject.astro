---
import useLang from "@utils/useLang";
import Button from "@components/buttons/Button.astro";
import projects from "@consts/projects";

const { t } = useLang(Astro.url);
---

<section id="projects" class="w-full h-vh bg-2 p-0 sm:p-10">
  <div
    class="sm:max-w-7xl mx-auto px-6 sm:px-10 xl:px-0 py-10 grid grid-cols-1 gap-10"
  >
    <div class="flex flex-col gap-3">
      <h4 class="text-3xl font-bold text-center">{t("projects.title")}</h4>
      <p class="text-center text-2 sm:w-4/4 md:w-3/4 lg:w-2/4 mx-auto">
        {t("projects.description")}
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
      {
        projects.map((project) => (
          <div class="flex flex-col gap-3 bg-3 rounded-md relative">
            <span class="px-2 py-1 rounded-full text-xs bg-black text-white absolute top-4 right-4">
              {project.isMockup
                ? t("projects.badges.mockup")
                : t("projects.badges.real")}
            </span>
            <div class="flex  gap-2 flex-col ">
              <img
                src={project.image}
                alt={t(`projects.items.${project.key}.name`)}
                class="w-full h-40 object-cover"
              />
            </div>
            <div class="flex flex-col gap-2 p-4">
              <h6 class="text-md font-bold">
                {t(`projects.items.${project.key}.name`)}
              </h6>
              <p class="text-sm">
                {t(`projects.items.${project.key}.description`)}
              </p>
              <div class="flex items-center justify-end gap-2">
                <Button href={project.link} variant="black" size="sm">
                  {t("projects.cta")}
                </Button>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

