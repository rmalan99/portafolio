---
import useLang from "../../utils/useLang";
import Button from "../buttons/Button.astro";
import ButtonIcon from "../buttons/ButtonIcon.astro";
import Github from "../../assets/icons/github.svg";
import Linkedin from "../../assets/icons/linkedin.svg";
import sources from "../../consts/sources";

const { t } = useLang(Astro.url);
const [name, lastName] =  t("header.name").split(' ')
---

<div class="w-full h-24 bg-black flex items-center">
  <div
    class="max-w-7xl w-full mx-auto px-6 md:px-12 lg:px-16 xl:px-0 flex flex-col sm:flex-row justify-between items-center gap-4 sm:gap-0"
  >
    <div class="flex gap-5 items-center">
      <div class="font-bold text-lg uppercase text-white">
        {name} <span class="text-3">{lastName}</span>
      </div>
      <div class="flex items-center gap-3">
        <ButtonIcon variant="white" href={sources.github}>
          <Github />
        </ButtonIcon>
        <ButtonIcon variant="white" href={sources.linkedin}>
          <Linkedin />
        </ButtonIcon>
      </div>
    </div>

    <div class="flex items-center gap-3">
      <span class="text-white text-sm font-light font-secondary">
        {t("footer.copyright")}
      </span>
    </div>
    <div class="hidden sm:block">
      <Button variant="white" size="sm">
        {t("footer.ctaContact")}
      </Button>
    </div>
  </div>
</div>

