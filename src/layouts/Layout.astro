---

import Footer from "../components/layouts/Footer.astro";
import Header from "../components/layouts/Header.astro";
import "../styles/global.css";
import useLang from "../utils/useLang";

const { t, lang } = useLang(Astro.url);
const contactStatus = Astro.url.searchParams.get("contact");
const contactBannerMessage =
  contactStatus === "success"
    ? t("contact.form.status.success")
    : contactStatus === "error"
      ? t("contact.form.status.error")
      : null;
const contactBannerTone =
  contactStatus === "success" ? "success" : contactStatus ? "error" : null;

// SEO Meta Information
const title = "Alan Hidalgo - Frontend Developer | Portfolio";
const description = lang === "es" 
  ? "Portafolio de Alan Hidalgo, desarrollador Frontend especializado en crear experiencias web modernas y eficientes."
  : "Portfolio of Alan Hidalgo, Frontend Developer specialized in creating modern and efficient web experiences.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL("/og-image.jpg", Astro.site);
---

<!doctype html>
<html lang={lang} data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Alan Hidalgo" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content={lang === "es" ? "es_ES" : "en_US"} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Alan Hidalgo",
        "jobTitle": "Frontend Developer",
        "url": canonicalURL,
        "sameAs": [
          "https://github.com/alanhidalgo",
          "https://linkedin.com/in/alanhidalgo"
        ]
      }
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Homemade+Apple&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen grid grid-rows-[auto_1fr_auto] ">
    <Header />
    {contactBannerMessage && contactBannerTone && (
      <div class="w-full px-4 sm:px-10">
        <div
          class={`mx-auto mt-4 max-w-4xl rounded-lg border px-4 py-3 text-sm ${
            contactBannerTone === "success"
              ? "border-green-200 bg-green-50 text-green-800"
              : "border-red-200 bg-red-50 text-red-800"
          }`}
          role="status"
          aria-live="polite"
        >
          {contactBannerMessage}
        </div>
      </div>
    )}
    <main class="w-full  mx-auto  ">
      <slot />
    </main>
    <Footer />
    {
      contactBannerMessage && (
        <script type="module">
          const url = new URL(window.location.href);
          if (url.searchParams.has("contact")) {
            url.searchParams.delete("contact");
            history.replaceState({}, "", url.toString());
          }
        </script>
      )
    }
  </body>
</html>

