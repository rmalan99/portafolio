---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
import useLang from "../utils/useLang";

const { t, lang } = useLang(Astro.url);

// SEO Meta Information
const title = "Alan Hidalgo - Full Stack Developer | Portfolio";
const description = lang === "es" 
  ? "Portafolio de Alan Hidalgo, desarrollador Full Stack especializado en crear experiencias web modernas y eficientes."
  : "Portfolio of Alan Hidalgo, Full Stack Developer specialized in creating modern and efficient web experiences.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL("/og-image.jpg", Astro.site);
---

<!doctype html>
<html lang={lang} data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Alan Hidalgo" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content={lang === "es" ? "es_ES" : "en_US"} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Alan Hidalgo",
        "jobTitle": "Frontend Developer",
        "url": canonicalURL,
        "sameAs": [
          "https://github.com/alanhidalgo",
          "https://linkedin.com/in/alanhidalgo"
        ]
      }
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Homemade+Apple&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen grid grid-rows-[auto_1fr_auto] ">
    <Header />
    <main class="max-w-7xl mx-auto px-6 md:px-12 lg:px-16 xl:px-0 ">
      <slot />
    </main>
    <Footer />
  </body>
</html>

